---
title: Профиль пользователя
css:
  - profile.css
  - avatar.css
---
{{!< base}}

<main>
  <section class="section profile">
    <div class="left-bar profile__left">
      <a class="profile__back" href="./messenger.hbs"></a>
    </div>
    <div class="profile__right">
      <div class="profile__content">
        <div class="profile__avatar">
          {{> avatar}}
        </div>
        <span class="profile__user-name">Иван</span>
        <ul class="profile-data profile__user-data">
          <li class="profile-data__item">
            <label class="profile-data__label" for="email-input">Почта</label>
            <input class="profile-data__input" id="email-input" type="email" name="email" value="pochta@yandex.ru" readonly>
          </li>
          <li class="profile-data__item">
            <label class="profile-data__label" for="login-input">Логин</label>
            <input class="profile-data__input" id="login-input" type="text" name="login" value="ivanivanov" readonly>
          </li>
          <li class="profile-data__item">
            <label class="profile-data__label" for="first-name-input">Имя</label>
            <input class="profile-data__input" id="first-name-input" type="text" name="first_name" value="Иван" readonly>
          </li>
          <li class="profile-data__item">
            <label class="profile-data__label" for="second-name-input">Фамилия</label>
            <input class="profile-data__input" id="second-name-input" type="text" name="second_name" value="Иванов" readonly>
          </li>
          <li class="profile-data__item">
            <label class="profile-data__label" for="display-name-input">Имя в чате</label>
            <input class="profile-data__input" id="display-name-input" type="text" name="display_name" value="Иван" readonly>
          </li>
          <li class="profile-data__item">
            <label class="profile-data__label" for="phone-input">Телефон</label>
            <input class="profile-data__input" id="phone-input" type="tel" name="phone" value="+7 (909) 967 30 30" readonly>
          </li>
        </ul>
        <ul class="profile-data">
          <li class="profile-data__item">
            <a href="./change-profile.hbs">Изменить данные</a>
          </li>
          <li class="profile-data__item">
            <a href="./change-password.hbs">Изменить пароль</a>
          </li>
          <li class="profile-data__item">
            <button class="button button_text profile-data__logout-button">Выйти</button>
          </li>
        </ul>
      </div>
    </div>
  </section>
</main>
